{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["dist", "node_modules"]
}
